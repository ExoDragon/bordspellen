@model ReviewViewModel

@{ 
    ViewData["Title"] = "Write a review";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Create Review</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry</b> - @TempData["Error"] </span>
            </div>
        }
        
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group pt-2">
                        <label asp-for="Rating" class="control-label"></label>
                        <input asp-for="Rating" class="form-control" type="number" min="1" max="5" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                    <div class="form-group pt-2">
                        <label asp-for="ReviewDescription" class="control-label"></label>
                        <input asp-for="ReviewDescription" class="form-control" />
                        <span asp-validation-for="ReviewDescription" class="text-danger"></span>
                    </div>

                    <div class="form-group pt-4">
                        <input class="btn btn-outline-success float-end" type="submit" value="Create" />
                        <a class="btn btn-outline-secondary" asp-controller="GameEvent" asp-action="Index">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>