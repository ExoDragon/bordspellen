@using Core.Domain.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BoardGameViewModel
@{
    ViewData["Title"] = "Create BoardGame";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Boardgame</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-8">
                            <label asp-for="Image" class="control-label"></label>
                            <input asp-for="Image" accept="image/*" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-4">
                            <label asp-for="HasAgeRestriction" class="control-label"></label>
                            <input asp-for="HasAgeRestriction" class="form-control form-check-input p-3" type="checkbox" value="false" onchange="this.value = this.checked" />
                            <span asp-validation-for="HasAgeRestriction" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label asp-for="Genre" class="control-label"></label>
                            <select asp-for="Genre" class="form-control form-select" asp-items="Html.GetEnumSelectList<BoardGameGenre>()"></select>
                            <span asp-validation-for="Genre" class="text-danger"></span>
                        </div>
                        <div class="form-group col-md-6">
                            <label asp-for="Type" class="control-label"></label>
                            <select asp-for="Type" class="form-control form-select" asp-items="Html.GetEnumSelectList<BoardGameType>()"></select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group pt-2">
                        <input type="submit" value="Create" class="btn btn-outline-success float-end" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>